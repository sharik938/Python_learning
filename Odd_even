def validator():
        for value in range(1, 6):
            try:
                number = int(input("Enter number"))
                if number % 2 == 0:
                    print("This is even number ")
                else:
                    print("This is odd number")
                print("You tried " + str(value) + " times, which is max")
            except ValueError:
                print("Enter number only")
validator()
